/* pages/biblecata/biblecata.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  color: #fc0;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #fc0;
}

.cata_container {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #ddd;
}

.cata_item {
  width: calc(25% - 1px);
  height: 40px;
  display: flex;
  flex-direction: column;
  border-right: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.cata_item label {
  text-align: center;
}

.shortname {
}

.fullname {
  font-size: 10px;
}
